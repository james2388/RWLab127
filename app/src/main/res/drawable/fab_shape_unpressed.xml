<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android" >
	<!--Container-->
	<item>
		<shape>
			<size android:height="@dimen/size_container_fab"
				  android:width="@dimen/size_container_fab"/>
		</shape>
	</item>
	<!--Gradient shadow-->
	<item android:top="5dp"
		android:right="4dp"
		android:left="4dp">
		<layer-list>
			<item>
				<shape android:shape="oval">
					<gradient android:type="radial"
							  android:startColor="#30000000"
							  android:endColor="#10000000"
							  android:gradientRadius="50"/>
				</shape>
			</item>
		</layer-list>
	</item>
	<!--Button shape-->
	<item android:bottom="@dimen/padding_unpressed_fab_in_container"
		  android:left="@dimen/padding_unpressed_fab_in_container"
		  android:right="@dimen/padding_unpressed_fab_in_container"
		  android:top="@dimen/padding_unpressed_fab_in_container">
		<layer-list>
			<item>
				<shape android:shape="oval">
					<size
						android:height="@dimen/size_fab"
						android:width="@dimen/size_fab"/>
					<solid android:color="@color/accent"/>
				</shape>
			</item>
			<item android:left="@dimen/padding_plus_symbol_fab"
				  android:right="@dimen/padding_plus_symbol_fab">
				<shape android:shape="line">
					<stroke android:width="@dimen/width_plus_symbol_fab"
							android:color="@color/background_material_light"/>
				</shape>
			</item>
			<item android:left="@dimen/padding_plus_symbol_fab"
				  android:right="@dimen/padding_plus_symbol_fab">
				<rotate android:fromDegrees="90"
						android:toDegrees="90">
					<shape android:shape="line">
						<stroke android:width="@dimen/width_plus_symbol_fab"
								android:color="@color/background_material_light"/>
					</shape>
				</rotate>
			</item>
		</layer-list>
	</item>
</layer-list>
