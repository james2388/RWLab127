<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
			  android:layout_width="match_parent"
			  android:layout_height="@dimen/recycler_view_tile_height"
			  android:orientation="horizontal"
			  android:padding="@dimen/recycler_view_tile_padding">
	<ImageView
		android:id="@+id/iconImageView"
		android:layout_width="@dimen/recycler_view_item_icon_size"
		android:layout_height="@dimen/recycler_view_item_icon_size"
		android:layout_gravity="center"
		android:contentDescription="@string/icon_description"
		android:padding="@dimen/recycler_view_item_icon_padding"/>

	<RelativeLayout
		android:layout_width="match_parent"
		android:layout_height="match_parent"
		android:gravity="center_vertical"
		android:paddingEnd="@dimen/recycler_view_item_inner_layout_right_padding"
		android:paddingLeft="@dimen/recycler_view_item_inner_layout_left_padding"
		android:paddingRight="@dimen/recycler_view_item_inner_layout_right_padding"
		android:paddingStart="@dimen/recycler_view_item_inner_layout_left_padding">
		<TextView
			android:id="@+id/title_text_view"
			style="@style/TextTitle"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"/>
		<TextView
			android:id="@+id/details_text_view"
			style="@style/TextDetails"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_below="@+id/title_text_view"/>
	</RelativeLayout>
</LinearLayout>
