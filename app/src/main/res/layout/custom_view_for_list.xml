<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
	android:id="@+id/item_frame_layout"
	xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="match_parent"
	android:layout_height="@dimen/recycler_view_tile_height"
	android:background="@color/background_material_dark">

	<TextView
		android:id="@+id/undo_text_view"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_gravity="center_vertical|end"
		android:paddingEnd="@dimen/recycler_view_tile_padding_right"
		android:paddingRight="@dimen/recycler_view_tile_padding_right"
		android:text="@string/undo_text_view"
		android:textColor="@color/accent"/>

	<FrameLayout
		android:id="@+id/actions_frame_layout"
		android:layout_width="0dp"
		android:layout_height="match_parent"
		android:background="@color/ripple_color">
		<ImageView
			android:id="@+id/action_image_view"
			android:contentDescription="@string/description_action_icon_image_view"
			android:layout_gravity="end|center_vertical"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:minHeight="@dimen/actions_image_size"
			android:maxHeight="@dimen/actions_image_size"
			android:paddingRight="@dimen/actions_image_view_padding"
			android:paddingEnd="@dimen/actions_image_view_padding"
			android:src="@android:drawable/ic_dialog_info"
			android:visibility="gone" />
	</FrameLayout>

