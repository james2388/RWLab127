<org.lucasr.dspec.DesignSpecFrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/design_spec_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:designSpec="@raw/my_spec">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity">

		<com.ruswizards.rwlab127.SpecialLinearLayout
			android:id="@+id/layout_special"
			android:background="@drawable/rw_item_background"
			android:layout_width="match_parent"
			android:layout_height="72dp"
			android:orientation="vertical"
			app:onSpecialClick="onSpecialClick"
			android:gravity="center_vertical"
			android:paddingLeft="72dp"
			android:paddingBottom="2dp">
			<TextView
				android:id="@+id/text_view_title"
				android:text="@string/text_view_title"
				style="@style/HeaderTextTitle"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content" />
			<TextView
				android:id="@+id/text_view_details"
				android:text="@string/text_view_details"
				style="@style/TextDetails"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content" />
		</com.ruswizards.rwlab127.SpecialLinearLayout>

		<android.support.v7.widget.RecyclerView
			android:id="@+id/recycler_view"
			android:scrollbars="vertical"
			android:layout_below="@+id/layout_special"
			android:layout_width="match_parent"
			android:layout_height="match_parent" >
		</android.support.v7.widget.RecyclerView>

		<ImageButton
			android:id="@+id/fab_button"
			android:background="@drawable/fab_shape"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_marginBottom="16dp"
			android:layout_marginRight="16dp"
			android:layout_marginEnd="16dp"
			android:layout_alignParentBottom="true"
			android:layout_alignParentRight="true"
			android:layout_alignParentEnd="true"
			android:onClick="onClick" />

    </RelativeLayout>
</org.lucasr.dspec.DesignSpecFrameLayout>
