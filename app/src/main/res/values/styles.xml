<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="AppTheme.Base"/>
        <!-- Theme customization. -->
        <style name="AppTheme.Base" parent="Theme.AppCompat.Light.DarkActionBar">
            <item name="colorPrimary">@color/colorPrimary</item>
		    <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
		    <item name="colorAccent">@color/accent</item>
			<item name="android:textColorPrimary">@color/textColorPrimary</item>
			<item name="android:textColorSecondary">@color/textColorSecondary</item>
        </style>

    <style name="TextTitle">
        <item name="android:textSize">@dimen/text_size_subhead_material</item>
		<item name="android:textColor">@color/textColorPrimary</item>
	</style>

    <style name="TextDetails">
        <item name="android:textSize">@dimen/text_size_body1_material</item>
		<item name="android:textColor">@color/textColorPrimary</item>
    </style>

    <style name="HeaderTextTitle">
        <item name="android:textSize">@dimen/text_size_title_material</item>
		<item name="android:textColor">@color/textColorPrimary</item>
	</style>

    <style name="HeaderTextDetails">
        <item name="android:textSize">@dimen/abc_text_size_headline_material</item>
    </style>
</resources>
