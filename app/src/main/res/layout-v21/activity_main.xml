<org.lucasr.dspec.DesignSpecFrameLayout
	android:id="@+id/design_spec_layout"
	xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:app="http://schemas.android.com/apk/res-auto"
	xmlns:tools="http://schemas.android.com/tools"
	android:layout_width="match_parent"
	android:layout_height="match_parent"
	app:designSpec="@raw/my_spec">
	<RelativeLayout
		android:layout_width="match_parent"
		android:layout_height="match_parent"
		tools:context=".MainActivity">

		<com.ruswizards.rwlab127.SpecialLinearLayout
			android:id="@+id/special_layout"
			android:layout_width="match_parent"
			android:layout_height="@dimen/upper_tile_height"
			android:background="@drawable/ripple"
			android:elevation="@dimen/upper_tile_elevation"
			android:gravity="center_vertical"
			android:orientation="vertical"
			android:paddingStart="@dimen/upper_tile_left_padding"
			app:onSpecialClick="onSpecialClick">
			<TextView
				android:id="@+id/title_text_view"
				style="@android:style/TextAppearance.Material.Title"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:text="@string/text_view_title"/>
			<TextView
				android:id="@+id/details_text_view"
				style="@android:style/TextAppearance.Material.Body1"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:text="@string/text_view_details"/>
		</com.ruswizards.rwlab127.SpecialLinearLayout>

		<android.support.v7.widget.RecyclerView
			android:id="@+id/recycler_view"
			android:layout_width="match_parent"
			android:layout_height="match_parent"
			android:layout_below="@+id/special_layout"
			android:scrollbars="vertical">
		</android.support.v7.widget.RecyclerView>

		<ImageButton
			android:id="@+id/floating_action_button"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_alignParentBottom="true"
			android:layout_alignParentEnd="true"
			android:layout_marginBottom="@dimen/fab_margin"
			android:layout_marginEnd="@dimen/fab_margin"
			android:background="@drawable/fab_shape"
			android:contentDescription="@string/fab_description"
			android:elevation="@dimen/fab_elevation"
			android:onClick="onClick"
			android:stateListAnimator="@drawable/fab_state_animator"/>
	</RelativeLayout>
</org.lucasr.dspec.DesignSpecFrameLayout>
